 <!-- RESTAURANTS -->

<div class="container">
  <h1>Create a new restaurant below :</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.button :submit, class: "btn btn-primary"%>
  <% end %>
  <br>
  <%= link_to "Back to menu", restaurants_path, class: "btn btn-primary" %>
</div>
